{

	"manifest_version":	2,

	"name":			"__MSG_extName__",
	"description":	"__MSG_extDescription__",
	"version":		"1.0.0",

	"default_locale": "en",

	"permissions":	[
		"management",
		"notifications",
		"https://chrome.google.com/webstore/*"
	],

	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": false
	},

	"browser_action": {
		"default_icon": {
			"19": "icons/icon19.png",
			"38": "icons/icon38.png"
		},
		"default_title": "__MSG_extName__",
		"default_popup": "popup.html"
	},

	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}

}